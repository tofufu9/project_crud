@model List<project_crud.Models.Contact>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Contacts" class="btn btn-success">
            Create
        </a>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead> 
                <tr>
                    <td>ID</td>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Email</td>
                    <td>Phone</td>
                    <td>Manage</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Mobile</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Contacts" class="btn btn-warning" asp-route-id="@item.Id">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-controller="Contacts" class="btn btn-danfer" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                }
            </tbody>
        </table>
    </div>
</div>